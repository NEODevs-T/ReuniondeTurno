                <BSLabel>Hasta</BSLabel>
                <BSInput InputType="InputType.Date" @bind-Value="fecha2" />
            </BSCol>

            <BSCol ColumnSmall="1" Column="2">
                <BSLabel>Código</BSLabel>
                <BSInput InputType="InputType.Select" @bind-Value="Codigo">
