@code {

    private bool IsDiscObservacionesVisible { get; set; } = false;
    private bool ObservacionesGuardadas { get; set; } = false;
    private int? PreviousCausaCal { get; set; } = null;

    private void OnDiscResponsableChanged(ChangeEventArgs e)
    {
        var selectedResponsableId = e.Value?.ToString();

        if (!string.IsNullOrEmpty(selectedResponsableId))
        {
            // Guardar la causa de calidad previa si cambia el responsable
            if (DiscForm.IdResReu == 9 && PreviousCausaCal.HasValue)
            {
                ObservacionesGuardadas = true;
            }
            else
            {
                ObservacionesGuardadas = false;
            }

            // Actualiza el ID del responsable en DiscForm
            DiscForm.IdResReu = int.Parse(selectedResponsableId);

            // Muestra u oculta la columna de observaciones
            if (DiscForm.IdResReu == 9)
            {
                IsDiscObservacionesVisible = true;
                // Si el usuario vuelve a seleccionar 9, inicializa las opciones si están vacías
                if (DiscForm.IdCausaCal == null || DiscForm.IdCausaCal == 0)
                {
                    DiscForm.IdCausaCal = 1; // Establece un valor inicial válido
                }
                // Borra la información de la columna Ubicación cuando el responsable es 9
                DiscForm.OrigenCal = "";
            }
            else
            {
                IsDiscObservacionesVisible = false;
                DiscForm.IdCausaCal = 1; // Limpia y establece en 1 la causa de calidad al cambiar responsable
                PreviousCausaCal = DiscForm.IdCausaCal; // Guarda el último valor de causa de calidad
                // Si el responsable no es 9 y la columna de ubicación tiene información, guarda "N/A"
                if (!string.IsNullOrEmpty(DiscForm.OrigenCal))
                {
                    DiscForm.OrigenCal = "N/A"; // Guarda "N/A" si la ubicación tiene algo escrito
                }
            }
        }
        else
        {
            IsDiscObservacionesVisible = false;
            DiscForm.IdCausaCal = 1; // Limpia y establece en 1 la causa de calidad si no hay responsable seleccionado
            // Si se desactiva el responsable y la ubicación está vacía, guarda "N/A"
            if (string.IsNullOrEmpty(DiscForm.OrigenCal))
            {
                DiscForm.OrigenCal = "N/A"; // Guarda "N/A" si la ubicación está vacía
            }
        }

        StateHasChanged();
    }

    private void OnCausaCalidadChanged(ChangeEventArgs e)
    {
        var selectedCausaCalidad = e.Value?.ToString();
        if (!string.IsNullOrEmpty(selectedCausaCalidad))
        {
            DiscForm.IdCausaCal = int.Parse(selectedCausaCalidad);
        }
        else
        {
            DiscForm.IdCausaCal = 1; // Limpia y establece en 1 la causa de calidad si no se selecciona nada
        }

        StateHasChanged();
    }

    private void OnUbicacionChanged(ChangeEventArgs e)
    {
        var selectedUbicacion = e.Value?.ToString();
        if (!string.IsNullOrEmpty(selectedUbicacion))
        {
            DiscForm.OrigenCal = selectedUbicacion;
        }
        else
        {
            DiscForm.OrigenCal = "N/A"; // Si está vacío, guarda "N/A"
        }

        StateHasChanged();
    }

    

    protected override async void OnInitialized()
    {
        DiscForm = await PizarraData.GetDiscrepantacia((int)Id);
        // Verificar el valor inicial del responsable
        if (DiscForm.IdResReu == 9)
        {
            IsDiscObservacionesVisible = true;
        }
        else
        {
            IsDiscObservacionesVisible = false;
        }

        base.OnInitialized();
    }

}
